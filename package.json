{
  "name": "TaxiService",
  "description": "A local taxi service",
  "version": "1.0.0",
  "scripts": {
    "compile-scss": "node-sass --source-map true --output-style compressed -o css scss/style.scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*.css",
    "watch": "onchange 'scss/**.scss' -- npm run build",
    "build": "npm run compile-scss && npm run autoprefixer",
    "start": "npm run build && parallelshell 'npm run watch'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asholiver/scss-boilerplate"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "node-sass": "^3.4.2",
    "onchange": "^2.2.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "shell-csslib": "^2.1.0",
    "stylelint": "^6.3.3"
  }
}
